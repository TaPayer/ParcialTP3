<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_fragments"
    app:startDestination="@id/characterListFragment">

    <fragment
        android:id="@+id/detailFragment"
        android:name="com.ar.ort.rickmorty.fragments.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail">
        <action
            android:id="@+id/action_detailFragment_to_characterListFragment"
            app:destination="@id/characterListFragment"
            app:popUpTo="@id/characterListFragment" />
        <argument
            android:name="Character"
            app:argType="com.ar.ort.rickmorty.Entities.Character" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.ar.ort.rickmorty.fragments.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.ar.ort.rickmorty.fragments.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/storeFragment"
        android:name="com.ar.ort.rickmorty.fragments.StoreFragment"
        android:label="fragment_store"
        tools:layout="@layout/fragment_store" />
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ar.ort.rickmorty.fragments.SettingsFragment"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/characterListFragment"
        android:name="com.ar.ort.rickmorty.fragments.CharacterListFragment"
        android:label="fragment_character_list"
        tools:layout="@layout/fragment_character_list" >
        <action
            android:id="@+id/action_characterListFragment_to_detailFragment"
            app:destination="@id/detailFragment"
            app:popUpTo="@id/characterListFragment"
            app:popUpToInclusive="true" />/>
    </fragment>
</navigation>